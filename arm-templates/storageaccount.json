{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "storageAccountName": {
        "type": "string",
        "metadata": {
            "description": "The name of the storage account to create. Must be between 3 and 24 characters in length and use numbers and lower-case letters only."
        }
    },
    "displayName": {
        "type": "string",
        "metadata": {
            "description": "The display name of the storage account to create. "
        }
    },
        "location": {
            "type": "string",
            "metadata": {
                "description": "The location where the storage account will be created."
            }
        } ,
        "sku": {
            "type": "string",
            "defaultValue": "Standard_LRS",
            "allowedValues": [
                "Standard_LRS",
                "Standard_GRS",
                "Standard_RAGRS",
                "Standard_ZRS",
                "Premium_LRS"
            ],
            "metadata": {
                "description": "The SKU name for the storage account."
            }
        }     
    },
    "functions": [],
    "variables": {},
    "resources": [
        {
            "name": "[parameters('storageAccountName')]",
            "type": "Microsoft.Storage/storageAccounts",
            "apiVersion": "2023-05-01",
            "tags": {
                "displayName": "[parameters('displayName')]"
            },
            "location": "[parameters('location')]",
            "kind": "StorageV2",
            "sku": {
                "name": "[parameters('sku')]",
                "tier": "Standard"
            }
        }
    ],
    "outputs": {}
}